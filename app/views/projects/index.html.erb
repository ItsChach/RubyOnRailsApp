<main role="main">
    <div class="jumbotron">
      <div class="container">
        <h1 class="display-3">Welcome!</h1>
         <p>My name is Cole Hulick and Im currently a senior at UCCS studying computer security. 
         This web application allows students to add, destroy, edit, and view their projects.</p>
        </div>
    </div>
    
    <hr>
    <div class="d-grid gap-2 col-6 mx-auto">
     <a <button class="btn btn-primary btn-lg" <%= link_to 'View All Projects', "/projects/list" %></a>
     <a <button class="btn btn-primary btn-lg" <%= link_to 'Create New Project', new_project_path %> </a>
    </div>
    <hr>

    <div class= "row mx-auto">
      <% @projects.each do |project| %>
        <tr>
         <div class="col-md-4">
           <h2> <td><%= project.title %></td> </h2>
           <hr>
           <div class = "jumbotron">
             <div class = "container">
               <td><%= "To view this project, please click" " View Details" "." %></td><p></p>
              </div>
            </div>
           <p><a class = "btn btn-secondary"  <%= link_to 'View details', project %> </a></p>
           <a <button type="button" class="btn btn-info btn-sm" <%= link_to 'Edit', edit_project_path(project) %></a> |
           <a <button type="button" class="btn btn-danger btn-sm" <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></a>
          </div>
         </tr>
      <% end %>
    </div>
    <hr>
    
</main>